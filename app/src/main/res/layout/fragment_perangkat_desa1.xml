<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal"
    tools:context=".perangkatdesa.PerangkatDesaFragment1">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listPengaduanPD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        tools:itemCount="7"
        tools:listitem="@layout/list_pengaduan1" />

    <TextView
        android:id="@+id/noPengaduanPD"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="DATA BELUM ADA"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progressBarPengaduanPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>